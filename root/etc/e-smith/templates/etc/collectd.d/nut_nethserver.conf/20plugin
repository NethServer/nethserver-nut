# If the UPS is locally attached collect data
{
    $status = $ups{'status'} || 'disabled';
    $mode = $ups{'Mode'} || 'master';
    $collectd_nut = (-e "/usr/lib64/collectd/nut.so");
    if ($mode eq 'master' && $status eq 'enabled' && $collectd_nut) {
        $OUT = <<EOF
LoadPlugin "nut"
<Plugin "nut">
  UPS "ups\@localhost"
</Plugin> 
EOF
    } else {
        $OUT.="# no local ups";
    }
}
